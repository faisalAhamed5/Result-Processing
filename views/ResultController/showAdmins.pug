doctype html
html(lang='en')
  include ../common/teacherHead.pug
  +head()
  body

    header
      h1 Gono University
        p Result Hub 

    h2 Created Admins
    br
    a(href='/createAdmins')
      button Create more..  
    br
    br
    table.upgrade
      tr
        th Username
        th Email
        th Dept
        th Role
      for user in users
        tr(id=user.id)
          td #{user.username}
          td #{user.email}
          td #{user.dept_id}
          td #{user.role_id}
          td 
            button(onclick=`deleteAdmins('${user.id}')`) Delete  

  script(src="https://code.jquery.com/jquery-3.5.1.min.js")
  script(src="/js/deleteAdmins.js")
