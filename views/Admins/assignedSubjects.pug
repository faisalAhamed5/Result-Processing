doctype html
html(lang='en')
  include ../common/teacherHead.pug
  +head()
  body

    header
      h1 Gono University
        p Result Hub 
      include ../common/teacherNavbar.pug
      +navbar(user)
    br
    h3 Assigned Subjects
    br
    table.assign
      tr
        th(scope="col") Subject ID
        th(scope="col") Session ID
        th(scope="col") Semester

        th(scope="col") Email
      for subject in subjects
        tr(id=subject.assign_id)
          td(scope="col") #{subject.sub_id}
          td(scope="col") #{subject.session_id}
          td(scope="col") #{subject.semester}

          td(scope="col") #{subject.email}
          td(scope="col")
            button(onclick=`DeleteAssignedSub('${subject.assign_id}')`) Delete   
    br
    br
    br
    br

  script(src="https://code.jquery.com/jquery-3.5.1.min.js")
  script(src="/js/DeleteAssignedSub.js")
