doctype html
html(lang='en')
  include ../common/teacherHead.pug
  +head()
  body

    header
      h1 Gono University
        p Result Hub 
      include ../common/teacherNavbar.pug
      +navbar(user)
    h3 Created users
      br 
      br
      table.assign
        tr
          th Username
          th Email
          th Dept
          th Role
        for user in users
          tr(id=user.id)
            td #{user.username}
            td #{user.email}
            td #{user.dept_id}
            td #{user.role_id}
            td 
              button(onclick=`deleteUsers('${user.id}')`) Delete  

    br 
    br  
    br   
    br      
  script(src="https://code.jquery.com/jquery-3.5.1.min.js")
  script(src="/js/deleteUsers.js")
