doctype html
html(lang='en')
  include ../common/teacherHead.pug
  +head()
  body
    header
      h1 Gono University
        p Result Hub 
      include ../common/teacherNavbar.pug
      +navbar()


    h2 Update Result
    table.combine
      tr
        th.sid1 SID
        th  &emsp;Exam Roll&emsp;
        th  &emsp;Subject&emsp;
        th  &emsp;Session&emsp;
        th &emsp;Exam Cat.&emsp;
        th.sid1.hide SID
        th.hide  Exam Roll
        th.hide  Subject
        th.hide  Session
        th.hide Exam Cat.
        th.hide  Q1
        th.hide  Q2
        th.hide  Q3
        th.hide  Q4
        th.hide  Q5
        th.hide  Q6
        th.hide  Q7
        th.hide  Q8
        th.hide  Q9
        th.hide  Q10
        th.hide  Q11
        th.hide  Q12
        th.hide  Q13
        th.hide  Q14
        th.hide  Q15
        th.hide  Lab 
        th.hide  Viva
        th.hide T1
        th.hide T2
        th.hide M1
        th.hide Attend
        th Total marks
        th 70% Marks
        th Marks
        th.hide Total marks
        th.hide 70% Marks
        th.hide Marks
        th Result
        th Controller Office




      for i in subjects
        tr(class=i.exam_roll)
          form(id=i.exam_roll,action="json/",method="POST",autocomplete="off")
            th.sid1= i.s_id
            th.roll= i.exam_roll
            th.sub= i.sub_id
            th.sess &emsp; #{i.session_id} &emsp;
            th= i.exam_type
            th.sid1.hide
              input(name="sid",type="text",size="2",value=i.s_id)
            th.roll.hide
              input(name="roll",type="text",size="2",value=i.exam_roll)
            th.sub.hide
              input(name="sub_id",type="text",size="7",value=i.sub_id)
            th.sess.hide
              input(name="session_id",type="text",size="9",value=i.session_id)
            th.hide
              input(name="exam_type",type="text",size="3",value=i.exam_type)
            td.hide

              input(name="q1",value=i.q1/2,type="text",size="1")
            td.hide

              input(name="q2",value=i.q2/2,type="text",size="1")
            td.hide

              input(name="q3",value=i.q3/2,type="text",size="1")
            td.hide

              input(name="q4",value=i.q4/2,type="text",size="1")
            td.hide

              input(name="q5",value=i.q5/2,type="text",size="1")
            td.hide

              input(name="q6",value=i.q6/2,type="text",size="1")
            td.hide

              input(name="q7",value=i.q7/2,type="text",size="1")
            td.hide

              input(name="q8",value=i.q8/2,type="text",size="1")
            td.hide

              input(name="q9",value=i.q9/2,type="text",size="1")
            td.hide

              input(name="q10",value=i.q10/2,type="text",size="1")
            td.hide

              input(name="q11",value=i.q11/2,type="text",size="1")
            td.hide

              input(name="q12",value=i.q12/2,type="text",size="1")
            td.hide

              input(name="q13",value=i.q13/2,type="text",size="1")
            td.hide

              input(name="q14",value=i.q14/2,type="text",size="1")
            td.hide

              input(name="q15",value=i.q15/2,type="text",size="1")
            td.hide

              input(name="lab",value=i.lab,type="text",size="1")

            td.hide
              input(name="viva",value=i.viva,type="text",size="1")
            td.hide
              input(name="practical",value=i.practical,type="text",size="1")
            td.hide
              input(name="clinical",value=i.clinical,type="text",size="1")
            td.hide
              input(name="t1",value=i.t1,type="text",size="1")
            td.hide
              input(name="t2",value=i.t2,type="text",size="1")
            td.hide
              input(name="m1",value=i.m1,type="text",size="1")
            td.hide
              input(name="attendance",value=i.attendance,type="text",size="1")
            td=i.subject_db.total_marks
            td= (i.q1*1+i.q2*1+i.q3*1+i.q4*1+i.q5*1+i.q6*1+i.q7*1+i.q8*1+i.q9*1+i.q10*1+i.q11*1+i.q12*1+i.q13*1+i.q14*1+i.q15*1)/2
            td= (i.q1*1+i.q2*1+i.q3*1+i.q4*1+i.q5*1+i.q6*1+i.q7*1+i.q8*1+i.q9*1+i.q10*1+i.q11*1+i.q12*1+i.q13*1+i.q14*1+i.q15*1)/2+i.lab*1+i.viva*1+(i.t1*1+i.t2*1)/2+i.m1*1+i.attendance*1+i.practical*1+i.clinical*1
            td.hide
              input(name="",value=i.subject_db.total_marks,type="text",size="1")
            td.hide
              input(name="obtained70Marks",value=(i.q1*1+i.q2*1+i.q3*1+i.q4*1+i.q5*1+i.q6*1+i.q7*1+i.q8*1+i.q9*1+i.q10*1+i.q11*1+i.q12*1+i.q13*1+i.q14*1+i.q15*1)/2,type="text",size="1")
            td.hide
              input(name="obtainedMarks",value=(i.q1*1+i.q2*1+i.q3*1+i.q4*1+i.q5*1+i.q6*1+i.q7*1+i.q8*1+i.q9*1+i.q10*1+i.q11*1+i.q12*1+i.q13*1+i.q14*1+i.q15*1)/2+i.lab+i.viva+(i.t1*1+i.t2*1)/2+i.m1*1+i.attendance*1+i.practical*1+i.clinical*1,type="text",size="1")

            td
              input(type="radio",class="result",name="result", value="Passed")
              label Passed

              input(type="radio",class="result",name="result", value="Failed")
              label Failed
            td 
              button(type="submit",value="submit",onclick=`submitCombinedResult('${i.exam_roll}')`) Submit

    script(src="https://code.jquery.com/jquery-3.5.1.min.js")
    script(src="/js/submitCombinedResult.js")






