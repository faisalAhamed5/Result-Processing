doctype html
html(lang='en')
  include ../common/teacherHead.pug
  +head()
  body
    header
      h1 Gono University
        p Result Hub 
      include ../common/teacherNavbar.pug
      +navbar()


    #buttons

      if works
        h2 Select for Review
        br
        for work in works
          a(href='/Teacher/reviewResult/' + work.session_id +'/'+work.semester+'/'+work.sub_id+'/') 
            button #{work.session_id} #{work.semester} semester #{work.sub_id}
            br
          br

    #results

      if results
        h2 Review Results
        table.review
          tr
            th  Exam Roll
            th Subject
            th  Q1
            th  Q2
            th  Q3
            th  Q4
            th  Q5
            th  Q6
            th  Q7
            th  Q8
            th  Q9
            th  Q10
            th  Q11
            th  Q12
            th  Q13
            th  Q14
            th  Q15
            th  T1
            th  T2
            th  M1
            th  Lab 
            th  Viva
            th  Attendance
            th  Exam Category
            th Result
            th  Delete
          each result in results
            tr(id=result.result_id)
              th
                label #{result.student_db.exam_roll}
              th=result.sub_id
              th= result.q1
              th #{result.q2}
              th #{result.q3}
              th #{result.q4}
              th #{result.q5}
              th #{result.q6}
              th #{result.q7}
              th #{result.q8}
              th #{result.q9}
              th #{result.q10}
              th #{result.q11}
              th #{result.q12}
              th #{result.q13}
              th #{result.q14}
              th #{result.q15}
              th #{result.t1}
              th #{result.t2}
              th #{result.m1}
              th #{result.lab}
              th #{result.viva}
              th #{result.attendance}
              th #{result.exam_type}
              th #{result.result}
              th
                button(type="submit",value="submit",onclick=`ResultDelete('${result.result_id}')`) Delete


  script(src="https://code.jquery.com/jquery-3.5.1.min.js")
  script(src="/js/ResultDelete.js")
