doctype html
html(lang='en')
  include ../common/teacherHead.pug
  +head()
  body

    header
      h1 Gono University
        p Result Hub 
      include ../common/teacherNavbar.pug
      +navbar()

    if works 
    #works
    h2 Update Result
    table
      tr

        th  Exam Roll
        th  Subject
        th Session
        th  Q1
        th  Q2
        th  Q3
        th  Q4
        th  Q5
        th  Q6
        th  Q7
        th  Q8
        th  Q9
        th  Q10
        th  Q11
        th  Q12
        th  Q13
        th  Q14
        th  Q15

        th Exam Category
        th Result
        th  Update

      for work in works
        form(id=work.result_id,action="",method="POST",autocomplete="off")
          tr(class=work.result_id)

            th
              label #{work.student_db.exam_roll}
            th
              label #{work.sub_id}
            th
              datalist(id="session_list")
                for session in sessions
                  option #{session.session_id} 
              input(name="session_id",type="text",list="session_list",size="10")
            td

              input(name="q1",value=work.q1,type="text",size="1")
            td

              input(name="q2",value=work.q2,type="text",size="1")
            td

              input(name="q3",value=work.q3,type="text",size="1")
            td

              input(name="q4",value=work.q4,type="text",size="1")
            td

              input(name="q5",value=work.q5,type="text",size="1")
            td

              input(name="q6",value=work.q6,type="text",size="1")
            td

              input(name="q7",value=work.q7,type="text",size="1")
            td

              input(name="q8",value=work.q8,type="text",size="1")
            td

              input(name="q9",value=work.q9,type="text",size="1")
            td

              input(name="q10",value=work.q10,type="text",size="1")
            td

              input(name="q11",value=work.q11,type="text",size="1")
            td

              input(name="q12",value=work.q12,type="text",size="1")
            td

              input(name="q13",value=work.q13,type="text",size="1")
            td

              input(name="q14",value=work.q14,type="text",size="1")
            td

              input(name="q15",value=work.q15,type="text",size="1")

            td
              input(type="radio",class="exam_type",name="exam_type", value="Suppli")
              label Suppli

              input(type="radio",class="exam_type",name="exam_type", value="Improve")
              label Improve
            td
              input(type="radio",class="result",name="result", value="Passed")
              label Passed

              input(type="radio",class="result",name="result", value="Failed")
              label Failed
            td
              button(type="submit",value="submit",onclick=`submitSupply('${work.result_id}')`) Submit
  script(src="https://code.jquery.com/jquery-3.5.1.min.js")
  script(src="/js/submitSupply.js")
