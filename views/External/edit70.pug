doctype html
html(lang='en')
  include ../common/teacherHead.pug
  +head()
  body
    header
      h1 Gono University
        p Result Hub 
      include ../common/teacherNavbar.pug
      +navbar()

    br
    br

    #students

      table
        tr
          th  Exam Roll
          th  Student ID
          th.theory  Q1
          th.theory  Q2
          th.theory  Q3
          th.theory  Q4
          th.theory  Q5
          th.theory  Q6
          th.theory  Q7
          th.theory  Q8
          th.theory  Q9
          th.theory  Q10
          th.theory  Q11
          th.theory  Q12
          th.theory  Q13
          th.theory  Q14
          th.theory  Q15
          th.lab.hide  Lab 
          th.viva.hide  Viva 
          th.viva.hide  Practical
          th.viva.hide  Clinical
          th Result
          th  Update
        for student in students
          tr(class=student.result_id) 
            form(id=student.result_id,action="json/",method="POST",autocomplete="off")
              td
                input(name="roll",size="4",type="text",value=student.exam_roll)
              td
                input.sid(name="sid",type="text",size="20",value=student.s_id)
              td.theory

                input(name="q1",value=student.q1,type="text",size="1")
              td.theory

                input(name="q2",value=student.q2,type="text",size="1")
              td.theory

                input(name="q3",value=student.q3,type="text",size="1")
              td.theory

                input(name="q4",value=student.q4,type="text",size="1")
              td.theory

                input(name="q5",value=student.q5,type="text",size="1")
              td.theory

                input(name="q6",value=student.q6,type="text",size="1")
              td.theory

                input(name="q7",value=student.q7,type="text",size="1")
              td.theory

                input(name="q8",value=student.q8,type="text",size="1")
              td.theory

                input(name="q9",value=student.q9,type="text",size="1")
              td.theory

                input(name="q10",value=student.q10,type="text",size="1")
              td.theory

                input(name="q11",value=student.q11,type="text",size="1")
              td.theory

                input(name="q12",value=student.q12,type="text",size="1")
              td.theory

                input(name="q13",value=student.q13,type="text",size="1")
              td.theory

                input(name="q14",value=student.q14,type="text",size="1")
              td.theory

                input(name="q15",value=student.q15,type="text",size="1")
              td.lab.hide

                input(name="lab",value=0,type="text",size="1")
              td.viva.hide
                input(name="viva",value=0,type="text",size="1")
              td.viva.hide
                input(name="practical",value=0,type="text",size="1")
              td.viva.hide
                input(name="clinical",value=0,type="text",size="1")
              td
                input(type="radio",class="result",name="result", value="Passed")
                label Passed

                input(type="radio",class="result",name="result", value="Failed")
                label Failed

              td 

                button(type="submit",value="submit",onclick=`submitResult('${student.result_id}')`) Submit
    br
    br
    br            
    a(href="../")
      button back

    script(src="https://code.jquery.com/jquery-3.5.1.min.js")
    script(src="/js/submitResult70.js")
    script.
      function showTheory(){

        $(".lab").hide();
        $(".viva").hide();

      };
      function showLab(){

        $(".theory").hide();
        $(".viva").hide();

      };
      function showViva(){

        $(".lab").hide();
        $(".theory").hide();

      }
