doctype html
html(lang='en')
  include ../common/teacherHead.pug
  +head()
  body

    header
      h1 Gono University
        p Result Hub 
      include ../common/teacherNavbar.pug
      +navbar()
    br
    br
    #buttons
      if works
        h2 Select for upload
        br
        br
        for work in works

          a(href='/External/uploadResult/' + work.session_id +'/'+work.semester+'/'+work.sub_id+'/')
            button #{work.session_id} #{work.semester} semester #{work.sub_id}
            br
            br
          |
          |
    #students

      if students
        h2 Upload Result
        table
          tr
            th.hide  Exam Roll
            th.hide  Student ID
            th  Exam Roll
            th  Student ID
            th  Q1
            th  Q2
            th  Q3
            th  Q4
            th  Q5
            th  Q6
            th  Q7
            th  Q8
            th  Q9
            th  Q10
            th  Q11
            th  Q12
            th  Q13
            th  Q14
            th  Q15

            th Result
            th  Upload
          for student in students
            tr(class=student.id) 
              form(id=student.id,action="json/",method="POST",autocomplete="off")
                td.hide
                  input(name="exam_roll",size="4",type="text",value=student.exam_roll)
                td.hide
                  input(name="sid",type="text",size="20",value=student.s_id)
                td= student.exam_roll

                td= student.s_id

                td

                  input(name="q1",value=0,type="text",size="1")
                td

                  input(name="q2",value=0,type="text",size="1")
                td

                  input(name="q3",value=0,type="text",size="1")
                td

                  input(name="q4",value=0,type="text",size="1")
                td

                  input(name="q5",value=0,type="text",size="1")
                td

                  input(name="q6",value=0,type="text",size="1")
                td

                  input(name="q7",value=0,type="text",size="1")
                td

                  input(name="q8",value=0,type="text",size="1")
                td

                  input(name="q9",value=0,type="text",size="1")
                td

                  input(name="q10",value=0,type="text",size="1")
                td

                  input(name="q11",value=0,type="text",size="1")
                td

                  input(name="q12",value=0,type="text",size="1")
                td

                  input(name="q13",value=0,type="text",size="1")
                td

                  input(name="q14",value=0,type="text",size="1")
                td

                  input(name="q15",value=0,type="text",size="1")

                td
                  input(type="radio",class="result",name="result", value="Passed")
                  label Passed

                  input(type="radio",class="result",name="result", value="Failed")
                  label Failed
                td 
                  button(type="submit",value="submit",onclick=`submitResult('${student.id}')`) Submit
    br
    br
    br
    br
    br              


  script(src="https://code.jquery.com/jquery-3.5.1.min.js")
  script(src="/js/submitResult30.js")
